# Threatreg Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Configuration
APP_ENVIRONMENT=development
APP_API_HOST=localhost
APP_API_PORT=8080

# Database Configuration
# For local development with docker-compose postgres
APP_DATABASE_URL="postgresql://threatreg:threatreg_dev_password@localhost:5432/threatreg?sslmode=disable"
APP_DEV_DATABASE_URL="postgresql://threatreg:threatreg_dev_password@localhost:5432/threatreg?sslmode=disable"

# Alternative SQLite configuration (default):
# APP_DATABASE_URL=sqlite3://app.db

# Development Settings
# Set to true to enable debug logging
DEBUG=false

# Migration Settings
# Set to true to automatically run migrations on startup
AUTO_MIGRATE=true